@model List<ChoixResto.Models.Resultats>

@{
    Layout = "~/Views/Shared/_LayoutChoixResto.cshtml";
}

        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Sondages</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <div class="row justify-content-center">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            @*<th scope="col">#</th>*@
                            <th scope="col">Nom</th>
                            <th scope="col">Téléphone</th>
                            <th scope="col">Nombre de votes</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var resto in Model)
                        {
                            <tr>
                                @*<th scope="row">@</th>*@
                                <td>@resto.Nom</td>
                                <td>@resto.Telephone</td>
                                <td>@resto.NombreDeVotes</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    





